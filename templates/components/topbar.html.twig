{# templates/components/topbar.html.twig #}

<div class="sticky-top bg-light">
	<div id="alert">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
	</div>
	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path(saferUrl)}}">Safer</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" href="{{ path(contactUrl)}}">Formulaire de contact</a>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Cat√©gorie
						</a>
						<ul class="dropdown-menu">

							{% for categorie in this.AllCategorie %}
								<li>
									<a class="dropdown-item" href="{{ path(categorieUrl, {id : categorie.id})}}">{{categorie.libelle}}</a>
								</li>
							{% endfor %}
						</ul>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path(favorisUrl)}}">Vos favoris</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</div>
