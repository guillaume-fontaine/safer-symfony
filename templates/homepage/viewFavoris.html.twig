{% extends 'homepage/index.html.twig' %}

{% block body %}
	{% if biens is empty %}
		Bijour vous n'avez aucun favoris
	{% else %}
		<div class="row">
			<div class="col-sm-8">
				{% for bien in biens %}
					{{ component('biens_favoris', { bien : bien, favoris : true, routeRedirection : routeRedirection, isLinkImage : true}) }}
				{% endfor %}
			</div>
			<div class="col-sm-4">
				<div class="sticky-top" style="top : 70px;">
					<div class="card">
						<h5 class="card-title">
							Envoyer vos favoris par mail
						</h5>
						<div class="card-body">
							{{ form_start(addFavorisForm) }}
							{{ form_row(addFavorisForm.mail) }}
							<button type="submit" class="btn btn-primary">Envoyer</button>
							{{ form_end(addFavorisForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
