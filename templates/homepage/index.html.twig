{% extends 'base.html.twig' %}

{% block header %} 
    {{component('header')}} 
{% endblock %}

{% block title %}Safer{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="page-header">
    <h1>Bienvenue chez Safer</h1>
</div>
<!--    
<style>
    table,th, td {
        border: 1px solid black;
    }
</style>
-->
<!-- Bien numero 1-->
{% for bien in biens %}
    <div class="container">
        <div class="jumbotron">
            <div class="table-responsive"> <!--Little screen ?-->
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center" colspan="3">{{bien[0]}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">{{bien[1]}}</td>
                            <td colspan="2" class="text-justify">{{bien[2]}}</td>
                        </tr>
                        <tr>
                            <td class="text-center">{{bien[3]}}</td>
                            <td class="text-center">{{bien[4]}}</td>
                            <td class="text-center">{{bien[5]}} m2</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}
