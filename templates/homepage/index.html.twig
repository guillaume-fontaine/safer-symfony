{% extends 'base.html.twig' %}

{% block title %}Safer{% endblock %}

{% block body %}


    {{ component('topbar') }} 
<div class="page-header">
    </br> <!-- due a la topbar, A revenir dessus si temps = ok-->
    <h1 class="text-center">Bienvenue chez Safer</h1>
</div>


    <div class="container text-center">
        <div class="row align-items-start">
        {% for bien in biens %}
        
        <div class="col">
            <div class="card" >
                <div class="card-header">
                    {{bien.intitule}}
                </div>
                <img src="{{image_if("/image/#{bien.reference}.jpg")}}" class="card-img" alt="...">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{bien.type}}</li>
                        <li class="list-group-item">Catégorie : {{bien.categorie.libelle}}</li>
                        <li class="list-group-item">Localisation : {{bien.localisation}}</li>
                        <li class="list-group-item">Surface : {{bien.surface}} ha</li>
                        <li class="list-group-item">
                        {% if bien.prix < 0 %}
                        Prix indisponible pour le moment
                        {% else %}
                        Prix : {{bien.prix}}€
                        {% endif %}
                        </li>
                    </ul>
                    <br>
                    <p class="font-weight-bold"> Description : </p>
                    <p>{{bien.descriptif}}</p>
                </div>
            </div>
        </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}