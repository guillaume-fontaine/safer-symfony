{% extends 'admin/base.html.twig' %}


{% block body %}

	<div class="container">
		<div class="row">
			<div class="col col-lg-6">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Nombre de favoris aujourd'hui :
							{{favoris}}</h5>
					</div>
				</div>
			</div>
			<div class="col col-lg-6">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Nombre de prise de contact aujourd'hui :
							{{contact}}</h5>
					</div>
				</div>
			</div>
		</div>
		<div class="row">

			{% for bien in top %}
				<div class="col-lg">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Mis en favoris
								{{bien.nbBien}}</h5>
						</div>
					</div>
					{{ component('biens', { bien : bien.biens, showFavoris : false}) }}
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
